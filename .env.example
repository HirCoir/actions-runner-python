# GitHub Actions Runner Configuration
# Copy this file to .env and fill in your values

# Required: GitHub repository or organization URL
# Example: https://github.com/YourUsername/your-repo
GITHUB_URL=

# Required: GitHub runner token
# Get this from: Repository Settings > Actions > Runners > Add runner
GITHUB_TOKEN=

# Optional: Custom runner name (defaults to container hostname)
RUNNER_NAME=python-runner

# Optional: Runner labels (comma-separated)
# These labels help identify your runner in workflow files
RUNNER_LABELS=self-hosted,python,docker

# Optional: Runner group (for organization runners)
RUNNER_GROUP=default

# Optional: Work directory inside container
RUNNER_WORK_DIR=_work
